<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_new_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.k46f.kontakti.NewContact">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/default_user"
        android:id="@+id/imageView"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop" />

    <TextView
        android:text="Add new contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/fullname"
        android:textSize="25sp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/phone"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="42dp"
        android:id="@+id/imagePhone" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/map"
        android:layout_below="@+id/imagePhone"
        android:layout_alignStart="@+id/imagePhone"
        android:layout_marginTop="13dp"
        android:id="@+id/imageAdress" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/email"
        android:layout_marginTop="12dp"
        android:id="@+id/imageEmail"
        android:layout_below="@+id/imageAdress"
        android:layout_alignStart="@+id/imageAdress" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/facebook"
        android:layout_below="@+id/imageEmail"
        android:layout_alignStart="@+id/imageEmail"
        android:layout_marginTop="11dp"
        android:id="@+id/imageFacebook" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/birthday"
        android:layout_below="@+id/imageFacebook"
        android:layout_marginTop="11dp"
        android:id="@+id/imageBirthday"
        android:layout_alignStart="@+id/imageFacebook" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="10sp"
        android:ems="20"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textSize="10sp"
        android:ems="20"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText2"
        android:hint="Phone"
        android:layout_above="@+id/imageAdress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:textSize="10sp"
        android:ems="20"
        android:layout_below="@+id/editText2"
        android:id="@+id/editText3"
        android:hint="Adress"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textSize="10sp"
        android:ems="20"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:id="@+id/editText4"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:ems="20"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:id="@+id/editText5"
        android:hint="Facebook" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:textSize="10sp"
        android:ems="20"
        android:layout_below="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:id="@+id/editText7"
        android:hint="Birthday" />

    <Button
        android:text="Change Photo"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/button2" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:id="@+id/floatingActionButton3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/edit"
        android:id="@+id/floatingActionButton2"
        android:src="@android:drawable/ic_menu_save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
