<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.k46f.kontakti.ViewContact">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/default_user"
        android:id="@+id/imageView"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop" />

    <TextView
        android:text="John Doe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/fullname"
        android:textSize="25sp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/phone"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="42dp"
        android:id="@+id/imagePhone" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/map"
        android:layout_below="@+id/imagePhone"
        android:layout_alignStart="@+id/imagePhone"
        android:layout_marginTop="13dp"
        android:id="@+id/imageAdress" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/email"
        android:layout_marginTop="12dp"
        android:id="@+id/imageEmail"
        android:layout_below="@+id/imageAdress"
        android:layout_alignStart="@+id/imageAdress" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/facebook"
        android:layout_below="@+id/imageEmail"
        android:layout_alignStart="@+id/imageEmail"
        android:layout_marginTop="11dp"
        android:id="@+id/imageFacebook" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/birthday"
        android:layout_below="@+id/imageFacebook"
        android:layout_marginTop="11dp"
        android:id="@+id/imageBirthday"
        android:layout_alignStart="@+id/imageFacebook" />

    <TextView
        android:text="300-6983560"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_above="@+id/imageAdress"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/imagePhone"
        tools:gravity="left|center" />

    <TextView
        android:text="Calle 35 NÂ° 24 -50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageAdress"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/textView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Doe@JohnDoe.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageEmail"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="JohnDoe2471"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageFacebook"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="24/12/98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageBirthday"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView7"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
